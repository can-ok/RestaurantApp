<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="11" author="can.okan">
        <createTable tableName="Food">
            <column autoIncrement="true" name="id" type="int(10)">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(255)"></column>
            <column name="description" type="VARCHAR(255)"></column>
            <column name="price" type="int(10)"></column>

        </createTable>
    </changeSet>


    <changeSet id="12" author="can.okan">
        <createTable tableName="TBL_CATEGORY_FOOD">
            <column name="product_id" type="int(10)">
                <constraints nullable="false" foreignKeyName="fk_food" references="Food(id)"/>
            </column>

            <column name="category_id" type="int(10)" >
                <constraints nullable="false" foreignKeyName="fk_food_category" references="PRODUCT_CATEGORY(id)"/>
            </column>

            <column autoIncrement="true" name="id" type="int(10)">
                <constraints primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="13" author="can.okan">
