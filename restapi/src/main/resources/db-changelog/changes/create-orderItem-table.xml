    <changeSet author="can.okan" id="30.12.2020">
        <createTable tableName="ORDERITEMS">
            <column autoIncrement="true" name="ID" type="int(10)">
                <constraints primaryKey="true"/>
            </column>

            <column name="PRODUCTID" type="int(5)"/>
            <column name="PRODUCTCOUNT" type="int(5)"/>
            <column name="PRODUCTPRICE" type="int(6)"/>
            <column name="DELETED" type="boolean" defaultValueBoolean="false"></column>
            <column name="orderId" type="int(10)">
                <constraints foreignKeyName="fk_orderItem_order" referencedColumnNames="Orders(id)"></constraints>
            </column>
        </createTable>

    </changeSet>


